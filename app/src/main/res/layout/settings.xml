<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogplus_card_shadow"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Switch
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="软键盘"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="关闭/打开软键盘" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="当前用户:"
                android:textColor="@color/balck"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/user_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="123"
                android:textColor="@color/balck"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:background="@color/background"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="以下仅专业人员修改"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/background_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="3"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:text="URL:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@android:color/background_light" />

        </LinearLayout>
    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/sycn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="同步数据"
        fbutton:buttonColor="@color/background"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/background"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />


        <info.hoang8f.widget.FButton
            android:layout_marginTop="10dp"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销账号"
            fbutton:buttonColor="@color/red"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/red_silver"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />

</LinearLayout>
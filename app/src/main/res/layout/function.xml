<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <info.hoang8f.widget.FButton
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_weight="1"
                android:id="@+id/function_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="入库管理"
                fbutton:buttonColor="@color/background"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/disenable"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="10dp" />

            <info.hoang8f.widget.FButton
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:height="100dp"
                android:layout_weight="1"
                android:id="@+id/function_changestorage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库位调拨"
                fbutton:buttonColor="@color/fbutton_color_silver"
                fbutton:cornerRadius="5dp"
                fbutton:shadowColor="@color/fbutton_color_concrete"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="10dp" />
    </LinearLayout>
</LinearLayout>